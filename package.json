{
  "name": "purity-trading",
  "productName": "Purity-Trading",
  "version": "1.1.3",
  "private": true,
  "description": "Purity Trading ERP System",
  "main": "main.js",
  "author": "Season Fresh",
  "scripts": {
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.puritytrading.erp",
    "productName": "Purity Trading ERP",
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true
    },
    "files": [
      "main.js",
      "package.json"
    ],
    "directories": {
      "output": "dist_v2"
    }
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  }
}