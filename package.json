{
  "name": "purity-trading-desktop",
  "productName": "Purity Trading ERP",
  "version": "1.1.2",
  "description": "Purity Trading ERP Desktop Application",
  "main": "main.js",
  "author": "Season Fresh",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder -w nsis"
  },
  "build": {
    "appId": "com.puritytrading.erp",
    "productName": "Purity Trading ERP",
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true
    },
    "files": [
      "main.js",
      "package.json"
    ],
    "directories": {
      "output": "dist_v2"
    }
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  }
}